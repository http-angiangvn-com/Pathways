<aside class="sidebar-page">
	<!-- Menu sidebar  -->
	{%- if settings.page_menu_show -%}	
	<div class="group-sidebox">
		<div class="sidebox-title ">
			<h3 class="htitle">
				{%- if settings.page_menu_title != '' -%}
				{{settings.page_menu_title}}
				{%- else -%}
				Danh má»¥c
				{%- endif -%}
			</h3>
		</div>
		<div class="sidebox-content sidebox-content-togged">
			<ul class="menuList-links">
				{% for link in linklists[settings.page_menu_category].links limit: 10 %}
				{% if linklists[link.handle].links == empty %}				
				<li class="{% if link.active %} active {% endif %}"><a href="{{link.url}}" title="{{link.title}}"><span>{{link.title}}</span></a></li>
				{% else %}
				<li class="has-submenu level0 {% if link.active %} active {% endif %}">
					<a href="{{ link.url }}" title="{{link.title}}">{{ link.title }} <span class="icon-plus-submenu plus-nClick1"></span></a>
					<ul class="submenu-links">
						{% for link2 in linklists[link.handle].links %}
						{% if linklists[link2.handle].links == empty %}
						<li><a href="{{ link2.url }}" title="{{link2.title}}">{{ link2.title }}</a></li>
						{% else %}
						<li class="has-submenu level1">
							<a href="{{ link2.url }}">{{ link2.title }}  <span class="icon-plus-submenu plus-nClick2"></span></a>
							<ul class="submenu-links" >
								{% for link3 in linklists[link2.handle].links %}						
								<li class=""><a href="{{ link3.url }}" title="{{link3.title}}" >{{ link3.title }}</a></li>
								{% endfor %}
							</ul>
						</li>
						{% endif %}
						{% endfor %}
					</ul>
				</li>
				{% endif %}
				{% endfor%}
			</ul>
		</div>
	</div>
	{%- endif -%} 
	<!-- Banner sidebar  -->
	{%- if settings.page_banner_show -%}	
	<div class="group-sidebox-banner">
		<div class="groupbanner_image"> 
			<a class="groupbanner_image_link" href="{{settings.page_banner_link}}">
				<div class="groupbanner_image_block banner-hover-effect">
					<picture>
						<source data-srcset="{{ 'page_banner_image.jpg' | asset_url }}" srcset="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=">
						<img class="lazyload" data-src="{{ 'page_banner_image.jpg' | asset_url }}" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII="
								 alt="{{settings.page_banner_alt}}">
					</picture>
				</div>						
			</a>		
		</div>	
	</div>
	{%- endif -%} 
</aside>