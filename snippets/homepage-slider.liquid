<div class="section-home-slider" id="homepage-slider">
	<div class="slider-owl owl-carousel ">
		<div class="slider-item">
			<div class="slide--image">
				<a href="{{ settings.slide_1_link }}" title="{{ settings.slide_1_alt | strip_html | escape}}" aria-label="{{ settings.slide_1_alt | strip_html | escape}}">
					<picture>
						<source media="(max-width: 767px)" srcset="{{ 'slide_1_mb.jpg' | asset_url}}" />
						<source media="(min-width: 768px)" srcset="{{ 'slide_1_img.jpg' | asset_url}}" />
						<img src="{{ 'slide_1_img.jpg' | asset_url }}" alt="{{ settings.slide_1_alt | strip_html | escape }}"/>
					</picture>
				</a>
			</div>
		</div>
		{%- for i in (2..4) -%}
		{% capture show_slide %}slide_{{ i }}_show{% endcapture %}
		{% capture image %}slide_{{ i }}_img.jpg{% endcapture %}
		{% capture image_mb %}slide_{{ i }}_mb.jpg{% endcapture %}
		{% capture alt %}slide_{{i}}_alt{% endcapture %}
		{% capture link %}slide_{{i}}_link{% endcapture %}
		{% capture title1 %}slide_home_txt1_{{i}}{% endcapture %}
		{% capture title2 %}slide_home_txt2_{{i}}{% endcapture %}
		{% capture desc %}slide_home_text_{{i}}{% endcapture %}
		{% capture btn %}slide_home_btn_{{i}}{% endcapture %}

		{%- if settings[show_slide] -%}
		<div class="slider-item">
			<div class="slide--image">
				<a href="{{ settings[link] }}" title="{{ settings[alt] | strip_html | escape}}" aria-label="{{ settings[alt] | strip_html | escape}}">
					<picture>
						<source media="(max-width: 767px)" class="owl-lazy" data-srcset="{{ image_mb | asset_url}}"
										srcset="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII="/>
						<source media="(min-width: 768px)" class="owl-lazy" data-srcset="{{image | asset_url}}"
										srcset="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII="/>

						<img class="owl-lazy" data-src="{{ image | asset_url }}" 
								 src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII="
								 alt="{{ settings[alt] | strip_html | escape }}"/>
					</picture>
				</a>
			</div>
		</div>
		{%- endif -%}
		{%- endfor -%}
	</div> 
	<div class="scroll-down-section">
		<button onclick="HRT.All.scrollDownOnePage();" aria-label="scroll down">
			<svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:svgjs="http://svgjs.com/svgjs" width="512" height="512" x="0" y="0" viewBox="0 0 490.656 490.656" style="enable-background:new 0 0 512 512" xml:space="preserve" class=""><g><g><g><path d="M487.536,120.445c-4.16-4.16-10.923-4.16-15.083,0L245.339,347.581L18.203,120.467c-4.16-4.16-10.923-4.16-15.083,0c-4.16,4.16-4.16,10.923,0,15.083l234.667,234.667c2.091,2.069,4.821,3.115,7.552,3.115s5.461-1.045,7.531-3.136l234.667-234.667C491.696,131.368,491.696,124.605,487.536,120.445z" fill="#000000" data-original="#000000"></path></g></g></g></svg>
		</button>
	</div>
</div>
