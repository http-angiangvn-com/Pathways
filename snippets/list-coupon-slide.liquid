<div class="coupon-initial {% if settings.coupon_select == 'couponView2' %}coupon-second{% endif %} bgWhite">
	{%- if settings.coupon_title != blank -%}
	<div class="title-coupon">
		<h2>{{settings.coupon_title}}</h2>
	</div>
	{%- endif -%}
	<div class="list-coupon-slide swiper" id="{{ couponIndex }}">
		<div class="swiper-wrapper">
			{%-assign htmlPopover = ''-%}
			{%- for i in (1..4) -%}
			{%-capture home_coupon_show-%}home_coupon_{{ i }}_show{%-endcapture-%}
			{%-capture home_coupon_img-%}home_coupon_{{i}}_img.png{%-endcapture-%}
			{%-capture home_coupon_title-%}home_coupon_{{ i }}_title{%-endcapture-%}
			{%-capture home_coupon_text-%}home_coupon_{{ i }}_text{%-endcapture-%}					
			{%-capture home_coupon_date-%}home_coupon_{{ i }}_date{%-endcapture-%}
			{%-capture home_coupon_code-%}home_coupon_{{ i }}_code{%-endcapture-%}
			{%-capture home_coupon_note_1-%}home_coupon_{{ i }}_note1{%-endcapture-%}
			{%-capture home_coupon_note_2-%}home_coupon_{{ i }}_note2{%-endcapture-%}
			{%-capture home_coupon_note_3-%}home_coupon_{{ i }}_note3{%-endcapture-%}
			{%- if settings[home_coupon_show] -%}
			<div class="coupon-item swiper-slide">
				<div class="coupon-item__inner">
					<div class="coupon-item__left">
						<div class="cp-img boxlazy-img">
							<span class="boxlazy-img__insert lazy-img__100">
								<span class="boxlazy-img__aspect">
									<img class="lazyload" data-src="{{ home_coupon_img | asset_url }}" src="{{ home_coupon_img | asset_url }}" alt="{{settings[home_coupon_title]}}">
								</span>
							</span>
						</div>
					</div>
					<div class="coupon-item__right">
						<button type="button" class="cp-icon"
										data-toggle="popover" data-container="body"	data-placement="bottom"
										data-popover-content="#cp-tooltip-{{i}}"	data-class="coupon-popover" title="{{settings[home_coupon_title]}} ">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" x="0" y="0" viewBox="0 0 24 24"><g><g fill="rgb(0,0,0)"><path clip-rule="evenodd" d="m12 3.53846c-4.67318 0-8.46154 3.78836-8.46154 8.46154 0 4.6732 3.78836 8.4615 8.46154 8.4615 4.6732 0 8.4615-3.7883 8.4615-8.4615 0-4.67318-3.7883-8.46154-8.4615-8.46154zm-10 8.46154c0-5.52285 4.47715-10 10-10 5.5228 0 10 4.47715 10 10 0 5.5228-4.4772 10-10 10-5.52285 0-10-4.4772-10-10z"></path><path clip-rule="evenodd" d="m12 7.64103c.4248 0 .7692.34439.7692.76923v4.10254c0 .4249-.3444.7693-.7692.7693s-.7692-.3444-.7692-.7693v-4.10254c0-.42484.3444-.76923.7692-.76923z"></path><path d="m13.0256 15.5897c0 .5665-.4592 1.0257-1.0256 1.0257s-1.0256-.4592-1.0256-1.0257c0-.5664.4592-1.0256 1.0256-1.0256s1.0256.4592 1.0256 1.0256z"></path></g></g></svg>
						</button>	
						{%-capture html_content_popover-%}
						<div class="cpi-tooltip__info" id="cp-tooltip-{{i}}">
							<div class="popover-content__coupon" >
								{%- if settings[home_coupon_code] != blank -%}
								<div class="dfex-txt dfex-bkg">
									<div class="dfex-txt--1">Mã</div>	
									<div class="dfex-txt--2"><b> {{settings[home_coupon_code]}}</b> <span class="cpi-trigger" data-coupon-index="coupon-item__{{i}}" data-coupon="{{settings[home_coupon_code]}}"></span></div>
								</div>
								{%- endif -%}
								{%- if settings[home_coupon_date] != blank -%}
								<div class="dfex-txt dfex-bkg">
									<div class="dfex-txt--1">Hạn sử dụng</div>
									<div class="dfex-txt--2">{{settings[home_coupon_date]}}</div></div>
								{%- endif -%}
								{%- if settings[home_coupon_note_1] != blank or settings[home_coupon_note_2] != blank or settings[home_coupon_note_3] != blank -%}
								<div class="dfex-txt dfex-bkg">
									<div class="dfex-txt--3">													
										<ul>
											{%- if settings[home_coupon_note_1] != blank -%}<li>{{settings[home_coupon_note_1]}}</li>	{%- endif -%}	
											{%- if settings[home_coupon_note_2] != blank -%}<li>{{settings[home_coupon_note_2]}}</li>	{%- endif -%}		
											{%- if settings[home_coupon_note_3] != blank -%}<li>{{settings[home_coupon_note_3]}}</li>	{%- endif -%}		
										</ul> 
									</div>
								</div>
								{%- endif -%}
								<div class="dfex-txt dfex-bkg dfex-none">
									<div class="dfex-txt--cta">
										{%- if settings[home_coupon_code] != blank -%}<button class="btn-popover btn-popover-code" data-coupon="{{settings[home_coupon_code]}}">Sao chép mã </button>	{%- endif -%}
										<button class="btn-popover btn-popover-close">Đóng</button>
									</div>
								</div>
							</div>
						</div>
						{%-endcapture-%}
						{%-assign htmlPopover = htmlPopover | append: html_content_popover -%} 
						<div class="cp-top">
							<h3>{{settings[home_coupon_title]}}</h3>
							<p>{{settings[home_coupon_text]}}</p>
						</div>
						<div class="cp-bottom">
							<div class="cp-bottom-detail">
								<p>Mã: <strong>{{settings[home_coupon_code]}}</strong></p>
								<p>HSD: {{settings[home_coupon_date]}}</p>
							</div>
							<div class="cp-bottom-btn">
								<button class="cp-btn button" data-coupon="{{settings[home_coupon_code]}}">Sao chép mã</button>
							</div>
						</div>
					</div>
				</div>
			</div>
			{%- endif -%}
			{%- endfor -%}
		</div>
		 <div class="swiper-pagination"></div>
	</div>
</div>