{% include 'article-image' with article:article %}
<div class="item-article">
	<div class="media-article">
		<a href="{{ article.url }}" title="{{ article.title }}" aria-label="{{ article.title }}">
			<img class="lazyload" data-src="{{ imageUrl | product_img_url : 'grande'}}" alt="{{ article.title }}"
					 src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII="/>
			<time  datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: '%d Tháng %m, %Y' }}</time>
		</a>	
	</div>
	<div class="info-article">
		<div class="title-article">
			<h4>
				<a href="{{ article.url }}">{{ article.title }}</a>
			</h4>
		</div>
		<div class="short-article">
			{{ article.excerpt_or_content | strip_html | truncatewords: 20 }}
		</div>
		<div class="view-article">
