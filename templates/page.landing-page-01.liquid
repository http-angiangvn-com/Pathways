{%- assign collection_tabs_size = settings.ldp_collection_limit -%}
<div class="layoutPage-ldpage01 {% unless settings.ldpage01_bannertop_show %} paddingTop {% endunless%}">
	{%- if settings.ldpage01_bannertop_show != false or settings.ldpage01_bannerbottom_show != false  -%}
	<section class="section-ldpage01-headerbanner">		
		{%- if settings.ldpage01_bannertop_show -%}
		<div class="bannerTop-item ">
			<picture>
				<source media="(max-width:767px)" srcset="{{'ldpage01_bannertop_mobile.jpg' | asset_url }}">
				<source media="(min-width: 768px)" srcset="{{'ldpage01_bannertop_image.jpg' | asset_url }}">
				<img src="{{'ldpage01_bannertop_image.jpg' | asset_url }}" alt="{{settings.ldpage01_bannertop_alt}}">
			</picture>		
		</div>
		{%- endif -%}
		{%- if settings.ldpage01_bannerbottom_show -%}
		<div class="bannerTop-item__insert">
			<div class="container">	
				<picture>
					<source media="(max-width: 767px)" srcset="{{'ldpage01_bannerbottom_image.jpg' | asset_url }}">
					<source media="(min-width: 768px)" srcset="{{'ldpage01_bannerbottom_image.jpg' | asset_url }}">
					<img src="{{'ldpage01_bannerbottom_image.jpg' | asset_url }}" alt="{{settings.ldpage01_bannerbottom_alt}}">
				</picture>	
			</div>
		</div>
		{%- endif -%}
	</section>	
	{%- endif -%}
	
	<section class="section-ldpage01-bestseller">
		<div class="wrapper-ldpage-heading section-ldpage-heading">
			<div class="container">
				<div class="ldpage-hTitle text-center">					
					<h1>
						{%-if settings.ldpage01_headpage_title != blank -%}
						{{settings.ldpage01_headpage_title}}	
						{%- else -%} {{page.title}} {%- endif -%}		
					</h1>
				</div>
			</div>
		</div>
		{%-if settings.ldpage01_countdown_start != blank or settings.ldpage01_countdown_end != blank -%}
		<div class="wrapper-ldpage-countdown flip-js-countdown">
			<div class="auto-due" data-start="{{settings.ldpage01_countdown_start | lstrip | rstrip | replace: ' ','T' }}" data-end="{{settings.ldpage01_countdown_end | lstrip | rstrip | replace: ' ','T'}}">
				<span id="label-due"></span><div id="soon-espa"></div>
			</div>
		</div>
		{% endif %}		
		{%- if settings.ldpage01_collection_show -%}
		<div class="wrapper-ldpage-collection" >
			<div class="container">
				<div class="tabslist-product-title">	
					<ul class="nav collection-navtabs collection-navtabs-title pills-tab" id="collection-navtabs-title">
						{%-assign loop = true-%}
						{%-assign htmlTabPane = ''-%}
						{%-assign noimage = 'no_image.jpg'-%}
						{%-assign tab_empty_html = ''-%}
						
						{%-for i in (1..collection_tabs_size)-%}
						{%-capture tab_empty-%}
							{%-include 'product-loop-ldpage-no'-%}
						{%-endcapture-%}
						{%-assign tab_empty_html = tab_empty_html | append: tab_empty-%}
						{%-endfor-%}

						{%-for tab in (1..4)-%}
						{%-capture title-%}ldpage01_collection_tabs_{{tab}}_title{%-endcapture-%}
						{%-capture handle-%}ldpage01_collection_tabs_{{tab}}_handle{%-endcapture-%}
						{%-assign handleSection = settings[handle]-%}
						{%-unless forloop.first-%}
						{%-capture show-%}ldpage01_collection_tabs_{{tab}}_show{%-endcapture-%}
						{%-assign loop = settings[show]-%}
						{%-endunless-%}
						{%-if loop-%}
						<li class="nav-item {%if forloop.first%}active{%endif%}">
							<a class="nav-link {%if forloop.first%}active{%endif%}" href="#collection-tabs-{{tab}}" data-handle="{{ collections[handleSection].url }}" data-toggle="tab">
								{%-assign titleTab = 'Nhóm sản phẩm' -%}
								{% if settings[title] != '' %}
								{%-assign titleTab = settings[title]-%}
								{%-elsif collections[handleSection].products.size >= 0  -%}
								{%-assign titleTab = collections[handleSection].title -%}
								{%-endif-%}

								{{titleTab}}
							</a>
						</li>	
						{%-capture tab_pane_html-%}
						<div class="tab-pane fade {%if forloop.first%} active show{%endif%}" id="collection-tabs-{{tab}}" data-get="{%if forloop.first%}true{%else%}false{%endif%}">
							{%-unless forloop.first-%}
							<div class="collection-listprod listProduct-ldpage-row content-product-list row">
								{%-for i in (1..collection_tabs_size)-%}
									{%-include 'product-loop-ldpage-loadding'-%}
								{%-endfor-%}
							</div>
							<div class="collection-loadmore text-center">
								{%- if collections[handleSection].products.size > collection_tabs_size  -%}
								<a class="button dark btn-loadmore" href="javascript:void(0);">Xem thêm sản phẩm</a>
								{%- endif -%}		
							</div>
							{%-else-%}
							{%-if collections[handleSection].products.size > 0-%}		
							<div class="collection-listprod listProduct-ldpage-row content-product-list row">
								{%-for product in collections[handleSection].products limit: collection_tabs_size-%}
									{%-include 'product-loop-ldpage' with collection.handle,  template: 'landing-page-01' -%}
								{%-endfor-%}							
							</div>
							<div class="collection-loadmore text-center">
								{%-if collections[handleSection].products.size > collection_tabs_size-%}	
								<a class="button dark btn-loadmore" href="javascript:void(0);">Xem thêm sản phẩm</a>
								{%-endif-%}
							</div>
							{%-else-%}
							<div class="collection-listprod listProduct-ldpage-row content-product-list row">							
								{{tab_empty_html}}
							</div>
							{%-endif-%}
							{%-endunless-%}
						</div>
						{%-endcapture-%}
						{%-assign htmlTabPane = htmlTabPane | append: tab_pane_html-%}
						{%-endif-%}
						{%-endfor-%}
					</ul>
				</div>			
				<div class="tabslist-product-content tab-content tabs-products" id="collection-tabs-ajax">
					{{ htmlTabPane }}		
				</div>
			</div>
		</div>
		{%- endif -%}
	</section>
	
	{%- if settings.ldpage01_coupon_banner_show != false or settings.ldpage01_coupon_1_show != false or settings.ldpage01_coupon_2_show != false or settings.ldpage01_coupon_3_show != false or settings.ldpage01_coupon_4_show != false -%}
	<section class="section-ldpage01-coupon">
		<div class="container" >
			{%- if settings.ldpage01_coupon_banner_show -%}
			<div class="list-coupon-banner text-center">
				<picture>
					<source media="(max-width:767px)" srcset="{{'ldpage01_coupon_banner_img.jpg' | asset_url }}">
					<source media="(min-width: 768px)" srcset="{{'ldpage01_coupon_banner_img.jpg' | asset_url }}">
					<img src="{{'ldpage01_coupon_banner_img.jpg' | asset_url }}" alt="{{settings.ldpage01_coupon_banner_alt}}">
				</picture>	
			</div>
			{%- endif -%}
			<div class="list-coupon--overflow">
				<div class="list-coupon-row">
					{%-assign htmlPopover = ''-%}

					{%- for i in (1..4) -%}
					{%-capture ldpcoupon_show-%}ldpage01_coupon_{{ i }}_show{%-endcapture-%}
					{%-capture ldpcoupon_title-%}ldpage01_coupon_{{ i }}_title{%-endcapture-%}
					{%-capture ldpcoupon_txt-%}ldpage01_coupon_{{ i }}_txt{%-endcapture-%}
					{%-capture ldpcoupon_text-%}ldpage01_coupon_{{ i }}_text{%-endcapture-%}					
					{%-capture ldpcoupon_date-%}ldpage01_coupon_{{ i }}_date{%-endcapture-%}
					{%-capture ldpcoupon_code-%}ldpage01_coupon_{{ i }}_code{%-endcapture-%}
					{%-capture ldpcoupon_note_1-%}ldpage01_coupon_{{ i }}_note1{%-endcapture-%}
					{%-capture ldpcoupon_note_2-%}ldpage01_coupon_{{ i }}_note2{%-endcapture-%}
					{%-capture ldpcoupon_note_3-%}ldpage01_coupon_{{ i }}_note3{%-endcapture-%}

					{%- if settings[ldpcoupon_show] -%}
					<div class="col-lg-6 col-md-6 col-12 coupon-item coupon-item__{{i}}">
						<div class="coupon-item__inner">
							<div class="coupon-item__left">
								<div class="cpi-info">
									<p class="cpi-name">Giảm ngay <strong>{{settings[ldpcoupon_title]}}</strong></p>
									<div class="cpi-flex" >
										<ul class="cpi-text">
											{%- if settings[ldpcoupon_txt] != blank -%}<li>{{settings[ldpcoupon_txt]}} <strong>{{settings[ldpcoupon_code]}}</strong></li>{%- endif -%}	
											{%- if settings[ldpcoupon_text] != blank -%}<li>{{settings[ldpcoupon_text]}}</li>{%- endif -%}						
										</ul>
										{%- if settings[ldpcoupon_code] != blank -%}<button class="cpi-button" data-coupon="{{settings[ldpcoupon_code]}}">Sao chép mã </button>{%- endif -%}		
									</div>
								</div>
							</div>
							<div class="coupon-item__right">
								{%- if settings[ldpcoupon_date] != blank -%}<p class="cpi-date"><small >Hạn sử dụng:</small> {{settings[ldpcoupon_date]}}</p>	{%- endif -%}
								<div class="cpi-tooltip ">								
									<button type="button" class="cpi-tooltip__dot"
													data-toggle="popover" data-container="body"	data-placement="bottom"
													data-popover-content="#cpi-tooltip-{{i}}"	data-class="coupon-popover" title="Giảm ngay {{settings[ldpcoupon_title]}} ">
										<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="20" height="20" viewBox="0 0 20 20"> <defs> <path id="4gg7gqe5ua" d="M8.333 0C3.738 0 0 3.738 0 8.333c0 4.595 3.738 8.334 8.333 8.334 4.595 0 8.334-3.739 8.334-8.334S12.928 0 8.333 0zm0 1.026c4.03 0 7.308 3.278 7.308 7.307 0 4.03-3.278 7.308-7.308 7.308-4.03 0-7.307-3.278-7.307-7.308 0-4.03 3.278-7.307 7.307-7.307zm.096 6.241c-.283 0-.512.23-.512.513v4.359c0 .283.23.513.512.513.284 0 .513-.23.513-.513V7.78c0-.283-.23-.513-.513-.513zm.037-3.114c-.474 0-.858.384-.858.858 0 .473.384.857.858.857s.858-.384.858-.857c0-.474-.384-.858-.858-.858z" /> </defs> <g> <g> <g> <g> <g> <g transform="translate(-2808 -4528) translate(2708 80) translate(52 4304) translate(48 144) translate(1.667 1.667)"> <use xlink:href="#4gg7gqe5ua" /> </g> </g> </g> </g> </g> </g> </svg>
									</button>	
									{%-capture html_content_popover-%}
									<div class="cpi-tooltip__info" id="cpi-tooltip-{{i}}">
										<div class="popover-content__coupon" >
											{%- if settings[ldpcoupon_code] != blank -%}
											<div class="dfex-txt dfex-bkg">
												<div class="dfex-txt--1">{%- if settings[ldpcoupon_txt] != blank -%}{{settings[ldpcoupon_txt]}}{%- else -%}Mã{%- endif -%}</div>	
												<div class="dfex-txt--2"><b> {{settings[ldpcoupon_code]}}</b> <span class="cpi-trigger" data-coupon-index="coupon-item__{{i}}" data-coupon="{{settings[ldpcoupon_code]}}"></span></div>
											</div>
											{%- endif -%}
											{%- if settings[ldpcoupon_date] != blank -%}
											<div class="dfex-txt dfex-bkg">
												<div class="dfex-txt--1">Hạn sử dụng</div>
												<div class="dfex-txt--2">{{settings[ldpcoupon_date]}}</div></div>
											{%- endif -%}
											{%- if settings[ldpcoupon_note_1] != blank or settings[ldpcoupon_note_2] != blank or settings[ldpcoupon_note_3] != blank -%}
											<div class="dfex-txt dfex-bkg">
												<div class="dfex-txt--3">													
													<ul>
														{%- if settings[ldpcoupon_note_1] != blank -%}<li>{{settings[ldpcoupon_note_1]}}</li>	{%- endif -%}	
														{%- if settings[ldpcoupon_note_2] != blank -%}<li>{{settings[ldpcoupon_note_2]}}</li>	{%- endif -%}		
														{%- if settings[ldpcoupon_note_3] != blank -%}<li>{{settings[ldpcoupon_note_3]}}</li>	{%- endif -%}		
													</ul> 
												</div>
											</div>
											{%- endif -%}
											<div class="dfex-txt dfex-bkg dfex-none">
												<div class="dfex-txt--cta">
													{%- if settings[ldpcoupon_code] != blank -%}<button class="btn-popover btn-popover-code" data-coupon="{{settings[ldpcoupon_code]}}">Sao chép mã </button>	{%- endif -%}
													<button class="btn-popover btn-popover-close">Đóng</button>
												</div>
											</div>
										</div>
									</div>
									{%-endcapture-%}
									{%-assign htmlPopover = htmlPopover | append: html_content_popover -%} 
								</div>
							</div>
						</div>
					</div>
					{%- endif -%}
					{%- endfor -%} 

				</div>
			</div>
		</div>
	</section>
	{%- endif -%}
	
	{%- if settings.ldpage01_collection_02_show -%}
	<section class="section-ldpage01-flashsale">
		<div class="wrapper-ldpage-collection" >
			<div class="container">
				<div class="tabslist-product-title">	
					<ul class="nav collection-navtabs collection-navtabs-title pills-tab" id="collection-navtabs-title">
						{%-assign loop = true-%}
						{%-assign htmlTabPane = ''-%}
						{%-assign noimage = 'no_image.jpg'-%}
						{%-assign tab_empty_html = ''-%}

						{%-for i in (1..collection_tabs_size)-%}
						{%-capture tab_empty-%}
							{%-include 'product-loop-ldpage-no'-%}
						{%-endcapture-%}
						{%-assign tab_empty_html = tab_empty_html | append: tab_empty-%}
						{%-endfor-%}

						{%-for tab in (5..8)-%}
						{%-capture title-%}ldpage01_collection_tabs_{{tab}}_title{%-endcapture-%}
						{%-capture handle-%}ldpage01_collection_tabs_{{tab}}_handle{%-endcapture-%}
						{%-assign handleSection = settings[handle]-%}
						{%-unless forloop.first-%}
						{%-capture show-%}ldpage01_collection_tabs_{{tab}}_show{%-endcapture-%}
						{%-assign loop = settings[show]-%}
						{%-endunless-%}
						{%-if loop-%}
						<li class="nav-item {%if forloop.first%}active{%endif%}">
							<a class="nav-link {%if forloop.first%}active{%endif%}" href="#collection-tabs-{{tab}}" data-handle="{{ collections[handleSection].url }}" data-toggle="tab">
								{%-assign titleTab = 'Nhóm sản phẩm' -%}
								{% if settings[title] != '' %}
								{%-assign titleTab = settings[title]-%}
								{%-elsif collections[handleSection].products.size >= 0  -%}
								{%-assign titleTab = collections[handleSection].title -%}
								{%-endif-%}

								{{titleTab}}
							</a>
						</li>	
						{%-capture tab_pane_html-%}
						<div class="tab-pane fade {%if forloop.first%} active show{%endif%}" id="collection-tabs-{{tab}}" data-get="{%if forloop.first%}true{%else%}false{%endif%}">
							{%-unless forloop.first-%}
							<div class="collection-listprod listProduct-ldpage-row content-product-list row">
								{%-for i in (1..collection_tabs_size)-%}
									{%-include 'product-loop-ldpage-loadding'-%} 
								{%-endfor-%}
							</div>
							<div class="collection-loadmore text-center">
								{%- if collections[handleSection].products.size > collection_tabs_size  -%}
								<a class="button dark btn-loadmore" href="javascript:void(0);">Xem thêm sản phẩm</a>
								{%- endif -%}		
							</div>
							{%-else-%}
							{%-if collections[handleSection].products.size > 0-%}		
							<div class="collection-listprod listProduct-ldpage-row content-product-list row">
								{%-for product in collections[handleSection].products limit: collection_tabs_size-%}
									{%-include 'product-loop-ldpage' with collection.handle,  template: 'landing-page-01' -%}
								{%-endfor-%}							
							</div>
							<div class="collection-loadmore text-center">
								{%-if collections[handleSection].products.size > collection_tabs_size-%}	
								<a class="button dark btn-loadmore" href="javascript:void(0);">Xem thêm sản phẩm</a>
								{%-endif-%}
							</div>
							{%-else-%}
							<div class="collection-listprod listProduct-ldpage-row content-product-list row">							
								{{tab_empty_html}}
							</div>
							{%-endif-%}
							{%-endunless-%}
						</div>
						{%-endcapture-%}
						{%-assign htmlTabPane = htmlTabPane | append: tab_pane_html-%}
						{%-endif-%}
						{%-endfor-%}
					</ul>
				</div>			
				<div class="tabslist-product-content tab-content tabs-products" id="collection-tabs-ajax">
					{{ htmlTabPane }}		
				</div>
			</div>
		</div>
	</section>
	{%- endif -%}
	
	{%- if settings.ldpage01_services_show -%}	
	<section class="section-ldpage01-service">
		<div class="container" >
			<div class="flexbox-service">
				{%- for i in (1..4) -%}
				{% capture ldpservice_icon %}ldpage01_services_{{ i }}_img.png{% endcapture %}
				{% capture ldpservice_title %}ldpage01_services_{{ i }}_title{% endcapture %}
				{% capture ldpservice_text %}ldpage01_services_{{ i }}_text{% endcapture %}
				<div class="service-item">
					<div class="service-item__inner">
						<div class="service--icon">
							<img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII="
									 class="lazyload" data-src="{{ ldpservice_icon | asset_url }}" alt="{{settings[ldpservice_title]}}">
						</div>
						<div class="service--info">
							{%- if settings[ldpservice_title] != blank -%}<h4>{{settings[ldpservice_title]}}</h4>{%- endif -%}
							{%- if settings[ldpservice_text] != blank -%}<p>{{settings[ldpservice_text]}}	</p>{%- endif -%}
						</div>
					</div>
				</div>
				{%- endfor -%} 
			</div>
		</div>
	</section>
	{%- endif -%}
	
	{%- if settings.ldpage01_banner_1_show != false or settings.ldpage01_banner_2_show != false or settings.ldpage01_banner_3_show != false or settings.ldpage01_banner_4_show != false -%}
	<section class="section-ldpage01-listbanner">
		<div class="container" >
			<div class="flexbox-banner">
				{%- for i in (1..4) -%}
				{% capture ldpbanner_show %}ldpage01_banner_{{ i }}_show{% endcapture %}
				{% capture ldpbanner_img %}ldpage01_banner_{{ i }}_image.jpg{% endcapture %}
				{% capture ldpbanner_alt %}ldpage01_banner_{{ i }}_alt{% endcapture %}
				{% capture ldpbanner_link %}ldpage01_banner_{{ i }}_link{% endcapture %}

				{%- if settings[ldpbanner_show] -%}
				<div class="banner-item">
					<a class="banner-item__link" href="{{settings[ldpbanner_link]}}">
						<img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII="
								 class="lazyload" data-src="{{ ldpbanner_img | asset_url }}" alt="{{settings[ldpbanner_alt]}}">
					</a>
				</div>
				{%- endif -%}
				{%- endfor -%} 
			</div>
		</div>
	</section>
	{%- endif -%}
</div>
<div class="d-none">{{ htmlPopover }}</div>
<div class="modal-coupon--backdrop"></div>

