												<div class="lb-left"><b>Công ty:</b></div>
												<div class="lb-right"><p>{{ address.company }}</p> </div>
											</div>										
											<div class="col-lg-12 col-md-12 large_view">
												<div class="lb-left"><b>Địa chỉ:</b></div>
												<div class="lb-right">
													<p>{{ address.address1 }}</p>
													<p>{{ address.address2 }}</p>
													<p>{{ address.province }}, {{ address.country }} </p>
												</div>
											</div>									
											<div class="col-lg-12 col-md-12 large_view">
												<div class="lb-left"><b>Số điện thoại:</b></div>
												<div class="lb-right">{{ address.phone }}</div>
											</div>
										</div>
									</div>    
									<div id="edit_address_{{address.id}}" class="customer_address edit_address" style="display:none;">
										{% form 'customer_address', address %}
										<div class="input-group">
											<span class="input-ico"><i class="fa fa-user-o"></i></span>
											<td class="value"><input type="text" id="address_last_name_{{form.id}}" class="input-textbox textbox" name="address[last_name]"  size="40" value="{{form.last_name}}" placeholder="Họ">
										</div>
										<div class="input-group">
											<span class="input-ico"><i class="fa fa-user-o"></i></span>
